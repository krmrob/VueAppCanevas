{
   "compilerOptions": {
      "target": "es6",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "esModuleInterop": true,
      "composite": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
         "@/*": ["./app/*"],
         "@api/*": ["./api/*"],
         "@entry/*": ["./entry/*"]
      }
   },
   "include": ["env.d.ts", "./src/**/*.ts", "./src/**/*.vue"],
   "exclude": ["node_modules", "dist", "src/api/*.ts"]
}
